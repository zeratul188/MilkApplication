<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="배달지 입력"
            android:textSize="20sp"
            android:textColor="#222222"
            android:fontFamily="@font/the110"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="배달지 주소"
            android:fontFamily="@font/the140"
            android:gravity="center"
            android:padding="10dp"
            android:textColorHint="#999999"
            android:background="@drawable/customedit"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="현관문 비밀번호"
                android:fontFamily="@font/the140"
                android:gravity="center"
                android:padding="10dp"
                android:textColorHint="#cfcfcf"
                android:background="@drawable/customedit"
                android:textSize="20sp"
                android:enabled="false"/>
            <CheckBox
                android:id="@+id/chkPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textSize="20sp"
                android:textColor="#444444"
                android:button="@null"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:background="@drawable/checkcustom"
                android:padding="10dp"
                android:fontFamily="@font/the110"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="우유 입력"
            android:textSize="20sp"
            android:textColor="#222222"
            android:fontFamily="@font/the110"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <EditText
                android:id="@+id/edtMilk"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="우유 종류"
                android:fontFamily="@font/the140"
                android:gravity="center"
                android:padding="10dp"
                android:textColorHint="#999999"
                android:layout_marginRight="5dp"
                android:background="@drawable/customedit"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edtNumber"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="우유 갯수"
                android:fontFamily="@font/the140"
                android:inputType="number"
                android:gravity="center"
                android:padding="10dp"
                android:textColorHint="#999999"
                android:layout_marginLeft="5dp"
                android:background="@drawable/customedit"
                android:textSize="20sp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="배달 요일 선택"
            android:textSize="20sp"
            android:textColor="#222222"
            android:fontFamily="@font/the110"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/chkWeek1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="월"
                android:textSize="20sp"
                android:textColor="#444444"
                android:button="@null"
                android:background="@drawable/checkcustom"
                android:padding="10dp"
                android:fontFamily="@font/the110"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textStyle="bold"/>
            <CheckBox
                android:id="@+id/chkWeek2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="화"
                android:textSize="20sp"
                android:textColor="#444444"
                android:button="@null"
                android:background="@drawable/checkcustom"
                android:padding="10dp"
                android:fontFamily="@font/the110"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textStyle="bold"/>
            <CheckBox
                android:id="@+id/chkWeek3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="수"
                android:textSize="20sp"
                android:textColor="#444444"
                android:button="@null"
                android:background="@drawable/checkcustom"
                android:padding="10dp"
                android:fontFamily="@font/the110"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textStyle="bold"/>
            <CheckBox
                android:id="@+id/chkWeek4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="목"
                android:textSize="20sp"
                android:textColor="#444444"
                android:button="@null"
                android:background="@drawable/checkcustom"
                android:padding="10dp"
                android:fontFamily="@font/the110"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textStyle="bold"/>
            <CheckBox
                android:id="@+id/chkWeek5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="금"
                android:textSize="20sp"
                android:textColor="#444444"
                android:button="@null"
                android:background="@drawable/checkcustom"
                android:padding="10dp"
                android:fontFamily="@font/the110"
                android:gravity="center"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="배달지 추가"
        android:textSize="20sp"
        android:fontFamily="@font/the110"
        android:textStyle="bold"
        android:background="@drawable/corebuttonstyle"
        android:textColor="#f0f0f0"
        android:layout_marginLeft="5dp"/>

</LinearLayout>